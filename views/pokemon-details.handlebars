
 <!-- pokemon-details.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/public/css/pokemon.css">
</head>
<body>
    <div class="pokemon-details">
        <h1>{{details.name}}</h1>
        <p class="description">See stats, types, and moves of each Pok√©mon!</p>
        <img src="{{details.image}}" alt="{{details.name}}">
        <ul>
            <!--
                hp: 
                attack: 
                defense: 
                special-attack: 
                special-defense: 
                speed: 
            -->
            <li><strong>ID:</strong> {{details.id}}</li>
            <li><strong>Types:</strong> 
                {{#each details.types}}
                    {{this}}{{#unless @last}}, {{/unless}}
                {{/each}}
            </li>
            <li><strong>Height:</strong> {{details.height}}</li>
            <li><strong>Weight:</strong> {{details.weight}}</li>
            <li><strong>Stats:</strong></li>
            <ul>
                {{#each details.stats}}
                    <li>{{this.name}}: {{this.value}}</li>
                {{/each}}
            </ul>
            <li><strong>Moves:</strong></li>
            <ul class="moves-list">
                {{#each details.moves}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </ul>
    </div>
</body>
</html>

