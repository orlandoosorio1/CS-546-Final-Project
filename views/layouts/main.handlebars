<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/public/css/main.css">
    <link rel="stylesheet" href="/public/css/home.css">
</head>
<body>
    <!-- Full-width container -->
    <header>
        <div class="header-left">
            <img src="/public/images/pokemon-logo.png" alt="Pokémon Logo">
        </div>
        <div class="header-right">
            <form action="/" method="GET">
                <button type="submit" class="login-button">Log In</button>
            </form>
        </div>
    </header>
    <!-- Navigation bar inside container -->
    <div class="container nav-container">
        <nav>
            <form action="/home" method="GET">
                <button type="submit">Home</button>
            </form>
            <form action="/profile" method="GET">
                <button type="submit">Profile</button>
            </form>
            <form action="/encyclopedia" method="GET">
                <button type="submit">Encyclopedia</button>
            </form>
            <form action="/builder" method="GET">
                <button type="submit">Team Builder</button>
            </form>
            <form action="/trivia" method="GET">
                <button type="submit">Trivia</button>
            </form>
            <form action="/pokemon" method="GET">
                <button type="submit">Who's That Pokémon</button>
            </form>
        </nav>
    </div>
    <!-- Main content area inside container -->
    <div class="container main-content">
        {{{body}}}
    </div>
    <!-- JavaScript to set active class on the current page's button -->
    <script>
        const currentPath = window.location.pathname;
        const navButtons = document.querySelectorAll('nav button');
        navButtons.forEach(button => {
            const formAction = button.closest('form').getAttribute('action');
            if (formAction === currentPath) {
                button.classList.add('active');
            }
        });
    </script>
</body>
</html>
