<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    {{!-- Page-specific title--}}
    <title> {{title}} </title>
    {{!-- Linking css file's  --}}
    <link rel="stylesheet" href="/public/css/main.css">
    <link rel="stylesheet" href="/public/css/home.css">
</head>

<body>
    <!-- Full-width container -->
    <header>
        <img src="/public/images/pokemon-logo.png" alt="Pokémon Logo">
    </header>
    <!-- Navigation bar inside container -->
    <div class="container nav-container">
        <nav>
            <a href="/home"><button>Home</button></a>
            <a href="/profile"><button>Profile</button></a>
            <a href="/encyclopedia"><button>Encyclopedia</button></a>
            <a href="/builder"><button>Team Builder</button></a>
            <a href="/trivia"><button>Trivia</button></a>
            <a href="/pokemon"><button>Who’s That Pokémon</button></a>
        </nav>
    </div>
    <!-- Main content area inside container -->
    <div class="container main-content">
        {{{body}}}
    </main>
    <!-- JavaScript to set active class on the current page's button -->
    <script>
        const currentPath = window.location.pathname;
        const navButtons = document.querySelectorAll('nav a');
        navButtons.forEach(anchor => {
            const buttonLink = anchor.getAttribute('href');
            if (buttonLink === currentPath) {
                anchor.querySelector('button').classList.add('active');
            }
        });
    </script>
</body>
</html>

