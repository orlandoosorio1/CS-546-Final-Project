<main class="profile-edit-container">
    <h1>Edit Your Profile</h1>
    <form action="/profile/edit" method="POST" class="edit-profile-form">
        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" value="{{user.dob}}" required>

        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="{{user.age}}" required>

        <label for="favoritePokemon">Favorite Pok√©mon:</label>
        <input type="text" id="favoritePokemon" name="favoritePokemon" value="{{user.favoritePokemon}}" required>

        <button type="submit">Save Changes</button>
    </form>
</main>
